<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CardInfoServlet</servlet-name>
        <servlet-class>uts.isd.controller.CardInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardInfoServlet</servlet-name>
        <url-pattern>/CardInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdatePaymentServlet</servlet-name>
        <servlet-class>uts.isd.controller.UpdatePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePaymentServlet</servlet-name>
        <url-pattern>/UpdatePaymentServlet</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>EditPaymentServlet</servlet-name>
        <servlet-class>uts.isd.controller.EditPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPaymentServlet</servlet-name>
        <url-pattern>/EditPaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>uts.isd.controller.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/OrderServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
